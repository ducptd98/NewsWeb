                        <div class="section-heading">
                            <h5>Categories</h5>
                        </div>

                        <!-- Catagory Widget -->
                        <ul class="catagory-widgets">
                            @foreach (var item in Model.Categories)
                            {
                                <li>
                                    <a href="#">
                                        <span>
