<!-- ##### Post Details Area Start ##### -->
<section class="post-details-area">
    <div class="container">
        <div class="row justify-content-center">
            <!-- Post Details Content Area -->
            <div class="col-12 col-xl-8">
                <div class="post-details-content bg-white mb-30 p-30 box-shadow">
                    <div class="blog-thumb mb-30">
                        <img src="@Model.Posts.FirstOrDefault().Image" alt="">
                    </div>
                    <div class="blog-content">
                        <div class="post-meta">
                            <a href="#">@Model.Posts.FirstOrDefault().CreateOn</a>
                            <a href="archive.html">@Model.Posts.FirstOrDefault().Category.Name</a>
                        </div>
                        <h4 class="post-title">@Model.Posts.FirstOrDefault().Title</h4>
                        <!-- Post Meta -->
                        <div class="post-meta-2">
                            <a asp-action="SinglePost" asp-route-id="@Model.Posts.FirstOrDefault().Id"><i class="fa fa-eye" aria-hidden="true"></i> @Model.Posts.FirstOrDefault().CountView</a>
                            <a href="#"><i class="fa fa-thumbs-o-up" aria-hidden="true"></i> 834</a>
                            <a href="#"><i class="fa fa-comments-o" aria-hidden="true"></i> 234</a>
                        </div>
                        <div>
                            @Html.Raw(Model.Posts.FirstOrDefault().Content)
                        </div>

                        <!-- Like Dislike Share -->
                        <div class="like-dislike-share my-5"
                             data-href="https://localhost:44301/Customer/Home/SinglePost/6"
                             data-layout="box_count" data-size="large">
                            <h4 class="share">240<span>Share</span></h4>
                            <a target="_blank"
                               href="https://www.facebook.com/sharer/sharer.php?u=https%3A%2F%2Flocalhost%3A44301%2FCustomer%2FHome%2FSinglePost%2F6&amp;src=sdkpreparse"
                               class="facebook"><i class="fa fa-facebook" aria-hidden="true"></i>Share on Facebook</a>
                        </div>

                        <!-- Post Author -->
                        <div class="post-author d-flex align-items-center">
                            <div class="post-author-thumb">
                                <img src="~/img/bg-img/52.jpg" alt="">
                            </div>
                            <div class="post-author-desc pl-4">
                                <a href="#" class="author-name">Alan Shaerer</a>
                                <p>Duis tincidunt turpis sodales, tincidunt nisi et, auctor nisi. Curabitur vulputate sapien eu metus ultricies fermentum nec vel augue. Maecenas eget lacinia est.</p>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Related Post Area -->
                <div class="related-post-area bg-white mb-30 px-30 pt-30 box-shadow">
                    <!-- Section Title -->
                    <div class="section-heading">
                        <h5>Related Post</h5>
                    </div>

                    <div class="row">
                        <!-- Single Blog Post -->
                        <div class="col-12 col-md-6 col-lg-4">
