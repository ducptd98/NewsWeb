@model News.Models.Category
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br /><br />

<h2>Create Category</h2>
<hr />
<div class="container">
    <form asp-action="Edit" method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Name"></label>
            </div>
            <div class="col-10">
                <input asp-for="Name" class="form-control" />
            </div>
            <span asp-validation-for="Name" class="table-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Description"></label>
            </div>
            <div class="col-10">
                <textarea asp-for="Description" class="form-control" id="description" name="description"></textarea>
            </div>
            <span asp-validation-for="Description" class="table-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="CreatedDate"></label>
            </div>
            <div class="col-10">
                <input asp-for="CreatedDate" type="text" readonly value="" id="created" class=" form-control" />
            </div>
            <span asp-validation-for="CreatedDate" class="table-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="ModifiedDate"></label>
            </div>
            <div class="col-10">
                <input asp-for="ModifiedDate" readonly type="text" value="" id="modified" class="form-control" />
            </div>
            <span asp-validation-for="ModifiedDate" class="table-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="ShowOnHome"></label>
            </div>
            <div class="col-10">
                <input asp-for="ShowOnHome" type="checkbox" />
            </div>
            <span asp-validation-for="ShowOnHome" class="table-danger"></span>
        </div>
        <div class="form-group offset-5">
            <input type="submit" value="Update" class="btn btn-primary" />
            <a asp-action="Index" class="btn btn-success">Back to List</a>
        </div>
    </form>
</div>

@section Scripts{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        $(document).ready(function () {
            var d = new Date();

            var month = d.getMonth() + 1;
            var day = d.getDate();

            var output = d.getFullYear() + '/' +
                (month < 10 ? '0' : '') + month + '/' +
                (day < 10 ? '0' : '') + day;

            var h = d.getHours();
            var m = d.getMinutes();
            var values = h + ":" + m;

            $("#created").attr('value', function () { return output + " " + values });
            $("#modified").attr('value', output + " " + values);

            $('#description').summernote();
        });

    </script>
}

