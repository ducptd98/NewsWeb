@model News.Models.Slide
@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<br /><br />

<h2>Create Slide Image</h2>
<hr />
<div class="container">
    <form asp-action="Create" method="post" enctype="multipart/form-data">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Name"></label>
            </div>
            <div class="col-10">
                <input asp-for="Name" class="form-control" />
            </div>
            <span asp-validation-for="Name" class="table-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Title"></label>
            </div>
            <div class="col-10">
                <textarea asp-for="Title" class="form-control"></textarea>
            </div>
            <span asp-validation-for="Title" class="table-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Image"></label>
            </div>
            <div class="col-10">
                <input asp-for="Image" class="form-control" type="file" name="files" />
            </div>
            <span asp-validation-for="Image" class="table-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="CreateOn"></label>
            </div>
            <div class="col-10">
                <input asp-for="CreateOn" type="text" readonly value="" id="created" class=" form-control" />
            </div>
            <span asp-validation-for="CreateOn" class="table-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="ShowOnHome"></label>
            </div>
            <div class="col-10">
                <input asp-for="ShowOnHome" type="checkbox" />
            </div>
            <span asp-validation-for="ShowOnHome" class="table-danger"></span>
        </div>
        <div class="form-group offset-5">
            <input type="submit" value="Create" class="btn btn-primary" />
            <a asp-action="Index" class="btn btn-success">Back to List</a>
        </div>
    </form>

</div>
@section Scripts{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        $(document).ready(function () {
            var d = new Date();

            var month = d.getMonth() + 1;
            var day = d.getDate();

            var output = d.getFullYear() + '/' +
                (month < 10 ? '0' : '') + month + '/' +
                (day < 10 ? '0' : '') + day;

            var h = d.getHours();
            var m = d.getMinutes();
            var values = h + ":" + m;

            $("#created").attr('value', function () { return output + " " + values });

        });

    </script>
}
