@model IEnumerable<News.Models.User>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br /><br />
<div class="container">
    <div class="row">
        <div class="col-10">
            <h2 class="text-info">User List</h2>
        </div>
        <div class="col-2">
            <a asp-area="Identity" asp-page="/Account/Register" class="btn btn-info"><i class="fa fa-plus"></i> &nbsp; New User</a>
        </div>
    </div>
    <br />
    <div class="row">
        <table class="table table-striped">
            <tbody>
                <tr>
                    <th>
                        @Html.DisplayNameFor(m => m.Name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(m => m.Email)
                    </th>
                    <th>
                        @Html.DisplayNameFor(m => m.PhoneNumber)
                    </th>
                    <th>
                        @Html.DisplayNameFor(m => m.Address)
                    </th>
                    <th>
                        @Html.DisplayNameFor(m => m.isAdmin)
                    </th>
                    <th>
                        Disable
                    </th>
                    <th></th>
                    <th></th>
                </tr>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(m => item.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(m => item.Email)
                        </td>
                        <td>
                            @Html.DisplayFor(m => item.PhoneNumber)
                        </td>
                        <td>
                            @Html.DisplayFor(m => item.Address)
                        </td>
                        <td>
                            @Html.DisplayFor(m => item.isAdmin)
                        </td>
                        <td>
                            @if (item.LockoutEnd != null && item.LockoutEnd > DateTime.Now)
                            {
                                <label>Disable</label>
                            }
                        </td>
                        <td>
                            @if (item.LockoutEnd == null || item.LockoutEnd < DateTime.Now)
                            {
                                <a class="btn btn-primary text-white" type="button" asp-action="Edit" asp-route-id="@item.Id">
                                    <i class="fas fa-edit"></i>
                                </a>
                                <a class="btn btn-danger text-white" type="button" asp-action="Edit" asp-route-id="@item.Id" onclick="return confirm('Are you sure??')">
                                    <i class="fas fa-trash-alt"></i>
                                </a>
                            }
                            
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

